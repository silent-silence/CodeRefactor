DECL_RANGE(Template, Template, TemplateTemplateParm)
LAST_DECL_RANGE(Var, Var, NonTypeTemplateParm)

#undef LAST_DECL_RANGE
#undef DECL_RANGE
#undef LAST_DECL_CONTEXT
#undef DECL_CONTEXT_BASE
